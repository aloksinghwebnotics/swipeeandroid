<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    app:behavior_hideable="false"
    app:behavior_peekHeight="0dp"
    android:id="@+id/intent_sheet"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.2"
        android:orientation="vertical"
        app:behavior_hideable="false"
        app:behavior_peekHeight="0dp"></RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        app:behavior_hideable="false"

        app:behavior_peekHeight="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingStart="@dimen/dimen36dp"
            android:paddingEnd="@dimen/dimen36dp"
            android:background="@color/white_light"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dimen8dp"
            app:behavior_hideable="false"
            app:behavior_peekHeight="0dp">

            <com.webnotics.swipee.CustomUi.PopinsMediumTextView
                android:id="@+id/tv_camera"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen40dp"
                android:layout_margin="@dimen/dimen6dp"
                android:background="@drawable/white_semiround_bg"
                android:gravity="center"
                android:text="Camera"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dimen14sp" />

            <com.webnotics.swipee.CustomUi.PopinsMediumTextView
                android:id="@+id/tv_gallery"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen40dp"
                android:layout_margin="@dimen/dimen6dp"
                android:background="@drawable/white_semiround_bg"
                android:gravity="center"
                android:text="Gallery"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dimen14sp" />

            <com.webnotics.swipee.CustomUi.PopinsMediumTextView
                android:id="@+id/tv_cancel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen40dp"
                android:layout_margin="@dimen/dimen6dp"
                android:background="@drawable/white_semiround_bg"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dimen14sp" />


        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
