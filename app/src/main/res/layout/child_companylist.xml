<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/dimen16dp"
    android:background="@drawable/primary_dash_12dp_round"
    android:layout_marginTop="@dimen/dimen2dp"
    android:layout_marginBottom="@dimen/dimen6dp"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_logo"
        android:layout_width="@dimen/dimen64dp"
        android:layout_height="@dimen/dimen64dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dimen6dp"
        android:src="@color/colorPrimary" />

    <LinearLayout
        android:id="@+id/ll_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/civ_logo"
        android:orientation="vertical"
        android:paddingStart="@dimen/dimen4dp">

        <com.swipee.in.CustomUi.PopinsMediumTextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen2dp"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen14sp" />

        <com.swipee.in.CustomUi.PopinsRegularTextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen2dp"
            android:textColor="@color/nav_gray"
            android:textSize="@dimen/dimen12sp" />
    </LinearLayout>




</RelativeLayout>