<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dimen16dp">
    <RelativeLayout
        android:id="@+id/rl_toollbar"
        android:paddingStart="@dimen/dimen18dp"
        android:paddingEnd="@dimen/dimen18dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen42dp">

        <ImageView
            android:id="@+id/iv_back"

            android:layout_width="@dimen/dimen30dp"
            android:layout_height="@dimen/dimen30dp"
            android:layout_centerVertical="true"
            android:paddingEnd="@dimen/dimen12dp"
            android:src="@drawable/ic_back" />

        <com.webnotics.swipee.CustomUi.PopinsMediumTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Job Posting Rule"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen16sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/tv_gotit"
        android:layout_below="@+id/rl_toollbar"
        android:layout_marginStart="@dimen/dimen12dp"
        android:layout_marginTop="@dimen/dimen12dp"
        android:layout_marginEnd="@dimen/dimen12dp"
        android:layout_marginBottom="@dimen/dimen12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.webnotics.swipee.CustomUi.PopinsRegularTextView
                android:id="@+id/tv_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen14sp" />

            <com.webnotics.swipee.CustomUi.PopinsRegularTextView
                android:id="@+id/tv_datavalue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen8dp"
                android:textColor="@color/black_Light"
                android:textSize="@dimen/dimen13sp" />
        </LinearLayout>

    </ScrollView>

    <com.webnotics.swipee.CustomUi.PopinsRegularTextView
        android:id="@+id/tv_gotit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen42dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dimen8dp"
        android:layout_marginEnd="@dimen/dimen8dp"
        android:layout_marginBottom="@dimen/dimen8dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="okay, got it"
        android:textColor="@color/white"
        app:textAllCaps="true" />




</RelativeLayout>