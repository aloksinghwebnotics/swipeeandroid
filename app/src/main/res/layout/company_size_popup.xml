<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#33000000"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="@dimen/dimen312dp"
        android:layout_gravity="center"
        android:elevation="@dimen/dimen4dp"
        android:background="@drawable/white_round_8dp_bg"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_height="@dimen/dimen405dp">
        <com.webnotics.swipee.CustomUi.PopinsMediumTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen12dp"
            android:text="Select Company Size"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dimen14sp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_sizelist"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/dimen16dp"
            android:layout_marginEnd="@dimen/dimen16dp"
            android:layout_marginBottom="@dimen/dimen12dp"
            android:layout_marginTop="@dimen/dimen4dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>