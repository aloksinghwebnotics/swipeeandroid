<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#33000000"
    android:padding="@dimen/dimen24dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:elevation="@dimen/dimen4dp"
        android:background="@drawable/white_round_8dp_bg"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/dimen36dp"
            android:layout_height="@dimen/dimen36dp"
            android:src="@drawable/ic_baseline_close_24"
            android:layout_gravity="end"
            android:padding="@dimen/dimen4dp"
            app:tint="@color/gray" />
        <ImageView
            android:layout_width="@dimen/dimen92dp"
            android:layout_height="@dimen/dimen92dp"
            android:src="@drawable/ic_confetti"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/dimen4dp" />
        <com.swipee.in.CustomUi.PopinsSemiboldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen4dp"
            android:text="Congratulations!"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen15sp"/>
        <com.swipee.in.CustomUi.PopinsRegularTextView
            android:id="@+id/tv_msg"
            android:layout_marginStart="@dimen/dimen12dp"
            android:layout_marginEnd="@dimen/dimen12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen8dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen13sp"/>
        <com.swipee.in.CustomUi.PopinsMediumTextView
            android:id="@+id/tv_msg1"
            android:layout_marginStart="@dimen/dimen12dp"
            android:layout_marginEnd="@dimen/dimen12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dimen8dp"
            android:paddingEnd="@dimen/dimen8dp"
            android:paddingBottom="@dimen/dimen8dp"
            android:gravity="center"
            android:text="Take a sneak peek now and swipe unlimited!"
             android:textColor="@color/black"
            android:textSize="@dimen/dimen13sp"/>

        <com.swipee.in.CustomUi.PopinsMediumTextView
            android:id="@+id/tv_close"
            android:layout_marginTop="@dimen/dimen12dp"
            android:layout_marginBottom="@dimen/dimen38dp"
            android:layout_width="@dimen/dimen250dp"
            android:layout_marginStart="@dimen/dimen30dp"
            android:layout_marginEnd="@dimen/dimen30dp"
            android:layout_height="@dimen/dimen40dp"
            android:text="Letâ€™s get started"
            android:textSize="@dimen/dimen16sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/primary_semiround_bg"/>

    </LinearLayout>

</LinearLayout>