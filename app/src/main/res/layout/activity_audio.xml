<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <include layout="@layout/content_video" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom|end"
                android:orientation="vertical">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/switch_camera_action_fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/fab_margin"
                    android:src="@drawable/ic_switch_camera_white_24dp"
                    app:fabSize="mini" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/local_video_action_fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/fab_margin"
                    android:src="@drawable/ic_videocam_white_24dp"
                    app:fabSize="mini" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/mute_action_fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_mic_white_24dp"
                    app:fabSize="mini" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/connect_action_fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fab_margin"
                    android:src="@drawable/ic_video_call_white_24dp"
                    app:fabSize="normal" />

            </LinearLayout>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_profile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen78dp"
                android:layout_marginTop="@dimen/dimen142dp"
                app:civ_border_width="0.1dp" />

            <com.webnotics.swipee.CustomUi.PopinsSemiboldTextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_profile"

                android:layout_marginTop="@dimen/dimen10dp"
                android:layout_marginBottom="3dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen16sp" />

            <com.webnotics.swipee.CustomUi.PopinsSemiboldTextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/name"
                android:layout_marginTop="@dimen/dimen5dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/dimen16sp" />


            <ImageView
                android:id="@+id/louder"
                android:layout_width="@dimen/dimen78dp"
                android:layout_height="@dimen/dimen78dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dimen60dp"
                android:layout_marginBottom="@dimen/dimen98dp"
                android:src="@drawable/mute"
                app:tint="@color/white" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/callcut"
                android:layout_width="@dimen/dimen78dp"
                android:layout_height="@dimen/dimen78dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/dimen60dp"
                android:layout_marginBottom="@dimen/dimen98dp"
                android:src="@drawable/ic_cancel_incoming" />
        </RelativeLayout>

    </RelativeLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
