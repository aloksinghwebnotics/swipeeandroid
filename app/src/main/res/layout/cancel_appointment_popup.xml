<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#33000000"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="@dimen/dimen288dp"
        android:layout_gravity="center"
        android:elevation="@dimen/dimen4dp"
        android:background="@drawable/white_round_8dp_bg"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <com.swipee.in.CustomUi.PopinsMediumTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen12dp"
            android:text="Cancel Appointment"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dimen15sp"/>
        <com.swipee.in.CustomUi.PopinsRegularTextView
            android:id="@+id/tv_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen12dp"
            android:layout_marginEnd="@dimen/dimen12dp"
            android:gravity="center"
            android:text="Are you sure, you want to cancel this appointment ?"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen12sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen1dp"
            android:background="#C8E3E3E3"
            android:layout_marginTop="@dimen/dimen12dp"
            android:layout_marginStart="@dimen/dimen8dp"
            android:layout_marginEnd="@dimen/dimen8dp"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:gravity="center"
               android:layout_height="wrap_content">
               <com.swipee.in.CustomUi.PopinsMediumTextView
                   android:layout_width="match_parent"
                   android:layout_weight="0.5"
                   android:id="@+id/tv_cancel"
                   android:layout_height="@dimen/dimen42dp"
                   android:gravity="center"
                   android:layout_marginStart="@dimen/dimen12dp"
                   android:layout_marginEnd="@dimen/dimen12dp"
                   android:text="NO"
                   android:textColor="@color/colorPrimary"
                   android:textSize="@dimen/dimen14sp"/>
               <View
                   android:layout_width="@dimen/dimen1dp"
                   android:layout_height="match_parent"
                   android:background="#C8E3E3E3"
                   android:layout_marginStart="@dimen/dimen4dp"
                   android:layout_marginEnd="@dimen/dimen4dp"/>
               <com.swipee.in.CustomUi.PopinsRegularTextView
                   android:id="@+id/tv_yes"
                   android:layout_width="match_parent"
                   android:layout_weight="0.5"
                   android:layout_height="@dimen/dimen42dp"
                   android:layout_marginStart="@dimen/dimen12dp"
                   android:layout_marginEnd="@dimen/dimen12dp"
                   android:text="YES"
                   android:gravity="center"
                   android:textColor="@color/colorPrimary"
                   android:textSize="@dimen/dimen14sp"/>
           </LinearLayout>

    </LinearLayout>

</LinearLayout>